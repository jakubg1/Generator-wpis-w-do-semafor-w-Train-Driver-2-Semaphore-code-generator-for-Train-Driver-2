<Window x:Class="GwDSTD2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gwDstd2="clr-namespace:GwDSTD2"
        mc:Ignorable="d" Height="350" Width="750" ResizeMode="NoResize" Title="{DynamicResource MainWindowTitle}">
    
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="744">
            <MenuItem Header="{DynamicResource MenuFile}" Height="30">
                <MenuItem Header="{DynamicResource MenuFileOpen}" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="{DynamicResource MenuFileSave}" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="{DynamicResource MenuFileExit}" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem x:Name="MenuSettingsLanguage" Header="{DynamicResource MenuSetting}">
                <MenuItem Header="{DynamicResource MenuSettingLanguage}" HorizontalAlignment="Left" Width="140">
                    <MenuItem x:Name="MenuSettingsLanguagePolish"  Header="{DynamicResource MenuSettingLanguagePolish}" HorizontalAlignment="Left" Width="140" IsCheckable="True"/>
                    <MenuItem x:Name="MenuSettingsLanguageEnglish" Header="{DynamicResource MenuSettingLanguageEnglish}" HorizontalAlignment="Left" Width="140" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource MenuAbout}">
                <MenuItem Header="{DynamicResource MenuAboutAuthors}" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="{DynamicResource MenuAboutVersion}" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
